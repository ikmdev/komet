<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console appender that always outputs to System.out -->
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <!-- Set root logger to INFO level -->
        <Root level="info">
            <AppenderRef ref="ConsoleAppender"/>
        </Root>

        <!-- More verbose logging for your framework tests -->
        <Logger name="dev.ikm.komet.framework" level="debug" additivity="false">
            <AppenderRef ref="ConsoleAppender"/>
        </Logger>

        <!-- Debug level for observable tests specifically -->
        <Logger name="dev.ikm.komet.framework.observable" level="debug" additivity="false">
            <AppenderRef ref="ConsoleAppender"/>
        </Logger>

        <!-- Reduce noise from Tinkar during tests -->
        <Logger name="dev.ikm.tinkar" level="warn" additivity="false">
            <AppenderRef ref="ConsoleAppender"/>
        </Logger>
    </Loggers>
</Configuration>