<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  xsi:schemaLocation="http://maven.apache.org/POM/4.1.0 https://maven.apache.org/xsd/maven-4.1.0.xsd">
	<modelVersion>4.1.0</modelVersion>

	<parent>
		<groupId>dev.ikm.tinkar</groupId>
		<artifactId>reasoner</artifactId>
	</parent>

	<artifactId>reasoner-elk-owl</artifactId>

	<name>Reasoner Elk Owl</name>

	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>entity</artifactId>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>entity-provider</artifactId>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>data-spinedarray-provider</artifactId>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>executor-provider</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>reasoner-service</artifactId>
		</dependency>
		<dependency>
			<groupId>dev.ikm.elk</groupId>
			<artifactId>elk-snomed</artifactId>
		</dependency>
		<dependency>
			<groupId>dev.ikm.elk</groupId>
			<artifactId>elk-snomed-owl</artifactId>
		</dependency>
		<dependency>
			<groupId>org.eclipse.collections</groupId>
			<artifactId>eclipse-collections</artifactId>
		</dependency>
		<dependency>
			<groupId>org.eclipse.collections</groupId>
			<artifactId>eclipse-collections-api</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack-test-db</id>
						<phase>pre-integration-test</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<skip>${skipITs}</skip>
							<artifactItems>
								<artifactItem>
									<groupId>${reasoner-test-data.groupid}</groupId>
									<artifactId>
										tinkar-test-data-build-snomed-intl-20240701</artifactId>
									<version>${tinkar-test-data.version}</version>
									<type>zip</type>
								</artifactItem>
								<artifactItem>
									<groupId>${reasoner-test-data.groupid}</groupId>
									<artifactId>
										tinkar-test-data-build-snomed-intl-20250101</artifactId>
									<version>${tinkar-test-data.version}</version>
									<type>zip</type>
								</artifactItem>
								<artifactItem>
									<groupId>${reasoner-test-data.groupid}</groupId>
									<artifactId>
										tinkar-test-data-build-snomed-us-20240901</artifactId>
									<version>${tinkar-test-data.version}</version>
									<type>zip</type>
								</artifactItem>
								<artifactItem>
									<groupId>${reasoner-test-data.groupid}</groupId>
									<artifactId>
										tinkar-test-data-build-snomed-us-20250301</artifactId>
									<version>${tinkar-test-data.version}</version>
									<type>zip</type>
								</artifactItem>
							</artifactItems>
							<outputDirectory>
								${project.build.directory}/db</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
