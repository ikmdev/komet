<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="dateTimePickerBorderPane" prefHeight="350.0" prefWidth="362.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <right>
      <Pane prefHeight="368.0" prefWidth="146.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" layoutY="41.0" prefHeight="44.0" prefWidth="147.0" spacing="3.0">
               <children>
                  <TextField fx:id="hourField" prefHeight="44.0" prefWidth="45.0">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </TextField>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text=":">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Text>
                  <TextField fx:id="minuteField" prefHeight="44.0" prefWidth="43.0">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="1.0" layoutY="94.0" prefHeight="30.0" prefWidth="146.0" spacing="1.0">
               <children>
                  <Button fx:id="amButton" mnemonicParsing="false" onAction="#handleAMAndPMButton" prefHeight="25.0" prefWidth="45.0" text="AM" />
                  <Button fx:id="pmButton" mnemonicParsing="false" onAction="#handleAMAndPMButton" prefHeight="25.0" prefWidth="45.0" text="PM" />
               </children>
            </HBox>
            <VBox alignment="CENTER" layoutY="246.0" prefHeight="101.0" prefWidth="146.0" spacing="10.0">
               <children>
                  <Button fx:id="applyButton" mnemonicParsing="false" onAction="#handleApplyButton" prefHeight="25.0" prefWidth="102.0" style="-fx-background-color: #4A7AD2;" text="APPLY" textFill="WHITE" />
                  <Button fx:id="dateTimePickerCancelButton" mnemonicParsing="false" onAction="#handleCancelButton" prefHeight="25.0" prefWidth="100.0" text="CANCEL" textFill="#4a7ad2" />
               </children>
            </VBox>
         </children>
      </Pane>
   </right>
</BorderPane>
