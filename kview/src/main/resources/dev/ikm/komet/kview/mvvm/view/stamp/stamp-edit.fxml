        <content>
            <ScrollPane maxHeight="150.0" nodeOrientation="LEFT_TO_RIGHT">
               <content>
                  <VBox fx:id="pathVBox" styleClass="option-container">
                     <children>
                        <RadioButton alignment="CENTER_RIGHT" contentDisplay="TOP" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" text="Development" wrapText="true">
                           <toggleGroup>
                              <ToggleGroup fx:id="pathToggleGroup" />
                           </toggleGroup>
