                              <ToggleGroup fx:id="moduleToggleGroup" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" text="SNOMED CT International" toggleGroup="$moduleToggleGroup" />
                     </children>
                     <padding>
                        <Insets left="8.0" />
                     </padding>
                  </VBox>
               </content>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </ScrollPane>
        </content>
      </TitledPane>
