        <content>
            <VBox fx:id="statusVBox" alignment="TOP_RIGHT" styleClass="option-container">
               <children>
                  <RadioButton fx:id="activeStatus" alignment="CENTER_RIGHT" contentDisplay="TOP" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" text="Active" VBox.vgrow="NEVER">
                     <toggleGroup>
                        <ToggleGroup fx:id="statusToggleGroup" />
                     </toggleGroup>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </RadioButton>
                  <RadioButton fx:id="inactiveStatus" alignment="CENTER_RIGHT" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" text="Inactive" toggleGroup="$statusToggleGroup" VBox.vgrow="NEVER">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </RadioButton>
               </children>
            </VBox>
