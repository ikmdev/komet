                     <padding>
                        <Insets left="8.0" />
                     </padding>
                  </VBox>
               </content>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </ScrollPane>
        </content>
      </TitledPane>
      <StackPane styleClass="horizontal-separator">
         <children>
            <Region prefHeight="1.0" styleClass="line" />
         </children>
      </StackPane>
