            </VBox.margin>
        </HBox>
        <Separator prefHeight="25.0" prefWidth="712.0" />
        <FlowPane alignment="CENTER_RIGHT">
            <children>
                <Label fx:id="exportLabel" text="Exporting filtered selection" />
